<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.icfolson.aem</groupId>
    <artifactId>aem-maven-archetype</artifactId>
    <version>2.1.0</version>
    <packaging>maven-archetype</packaging>
    <name>aem-maven-archetype</name>
    <description>Maven archetype for AEM projects that utilize the ICF Olson AEM Library.</description>

    <organization>
        <name>ICF Olson</name>
        <url>http://www.icfolson.com</url>
    </organization>

    <url>https://github.com/OlsonDigital/aem-archetype</url>

    <scm>
        <connection>scm:git:git@github.com:OlsonDigital/aem-archetype.git</connection>
        <url>https://github.com/OlsonDigital/aem-archetype</url>
        <developerConnection>scm:git:git@github.com:OlsonDigital/aem-archetype.git
        </developerConnection>
    </scm>

    <developers>
        <developer>
            <name>Mark Daugherty</name>
            <email>mark.daugherty@icfolson.com</email>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <distributionManagement>
        <repository>
            <id>citytech-releases</id>
            <url>http://nexus.citytech.ctmsp.com/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>citytech-snapshots</id>
            <url>http://nexus.citytech.ctmsp.com/content/repositories/snapshots</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.archetype</groupId>
                <artifactId>archetype-packaging</artifactId>
                <version>2.2</version>
            </extension>
        </extensions>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-archetype-plugin</artifactId>
                    <version>2.2</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>external.atlassian.jgitflow</groupId>
                <artifactId>jgitflow-maven-plugin</artifactId>
                <version>1.0-m1</version>
                <configuration>
                    <flowInitContext>
                        <featureBranchPrefix>feature/</featureBranchPrefix>
                        <releaseBranchPrefix>release/</releaseBranchPrefix>
                        <hotfixBranchPrefix>hotfix/</hotfixBranchPrefix>
                    </flowInitContext>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <noDeploy>true</noDeploy>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
